# Database
DATABASE_URL=postgresql://user:password@localhost:5432/astral_planner
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Authentication (Stack Auth)
STACK_PROJECT_ID=your_stack_project_id
STACK_SECRET_SERVER_KEY=your_stack_secret_key
STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_key
ENABLE_TEST_USER=false

# AI Configuration
AI_PROVIDER=openai
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Alternative AI Providers
# For OpenAI:
# AI_PROVIDER=openai
# AI_MODEL=gpt-4 or gpt-3.5-turbo

# For Anthropic Claude:
# AI_PROVIDER=anthropic
# AI_MODEL=claude-3-sonnet-20240229

# For Local Models:
# AI_PROVIDER=local
# AI_API_URL=http://localhost:11434/api/generate
# AI_MODEL=llama2

# Optional: AI Features Toggle
ENABLE_AI_FEATURES=true

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# External Services
PUSHER_APP_ID=your_pusher_app_id
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Stripe (for subscriptions)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_API_KEY=your_analytics_key

# Email
EMAIL_PROVIDER=resend
EMAIL_API_KEY=your_email_api_key
FROM_EMAIL=noreply@your-domain.com

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000