# Development Environment Configuration
# DO NOT COMMIT TO VERSION CONTROL

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable development features
ENABLE_TEST_USER=true
LOG_LEVEL=debug

# Stack Auth Configuration (Primary Authentication)
STACK_PROJECT_ID=your-stack-project-id
STACK_SECRET_SERVER_KEY=your-stack-secret-server-key
STACK_PUBLISHABLE_CLIENT_KEY=your-stack-publishable-client-key

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/astral_planner_dev
DIRECT_DATABASE_URL=postgresql://username:password@localhost:5432/astral_planner_dev

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# AI Integration (Optional - comment out if not using)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_ORGANIZATION=org-your-openai-org-id-here

# Real-time Features (Optional - comment out if not using)
# PUSHER_APP_ID=your-pusher-app-id-here
# PUSHER_SECRET=your-pusher-secret-here
# NEXT_PUBLIC_PUSHER_KEY=your-pusher-key-here
# NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Redis Cache (Optional - comment out if not using)
# REDIS_URL=redis://localhost:6379

# Email Service (Optional - comment out if not using)
# RESEND_API_KEY=re_your-resend-api-key

# Feature Flags
NEXT_PUBLIC_FEATURE_AI_PARSING=false
NEXT_PUBLIC_FEATURE_CALENDAR_INTEGRATION=false
NEXT_PUBLIC_FEATURE_REALTIME_COLLABORATION=false
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_TEMPLATES=true

# Development Security
SESSION_SECRET=your-super-secret-session-key-development-only
JWT_SECRET=your-jwt-secret-development-only

# Development Port
PORT=3000