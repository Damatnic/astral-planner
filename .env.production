# Production Environment Variables for Ultimate Digital Planner

# Database (Neon PostgreSQL)
DATABASE_URL="your-neon-database-url-here"

# Authentication (Stack Auth) - Configure with your production keys
STACK_PROJECT_ID="your-production-stack-project-id"
STACK_PUBLISHABLE_CLIENT_KEY="your-production-stack-client-key"
STACK_SECRET_SERVER_KEY="your-production-stack-server-key"

# AI Services (OpenAI)
OPENAI_API_KEY="your-openai-api-key-here"

# Real-time (Pusher)
NEXT_PUBLIC_PUSHER_KEY="xxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="xxxxxxxxxxxxxxxxxxxxx"
PUSHER_SECRET="xxxxxxxxxxxxxxxxxxxxx"

# Google Calendar Integration
GOOGLE_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxx"
GOOGLE_REDIRECT_URI="https://your-app.vercel.app/api/auth/google/callback"

# Slack Integration
SLACK_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxx"
SLACK_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxx"
SLACK_SIGNING_SECRET="xxxxxxxxxxxxxxxxxxxxx"

# Monitoring (Sentry) - Configure with real values for production
NEXT_PUBLIC_SENTRY_DSN="https://your-actual-sentry-dsn@ingest.sentry.io/your-project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="astral-planner"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Application
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NODE_ENV="production"

# Analytics
NEXT_PUBLIC_GA_ID="G-xxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_MIXPANEL_TOKEN="xxxxxxxxxxxxxxxxxxxxx"

# Email (for notifications)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="notifications@your-app.com"

# File uploads
UPLOADTHING_SECRET="sk_live_xxxxxxxxxxxxxxxxxxxxx"
UPLOADTHING_APP_ID="xxxxxxxxxxxxxxxxxxxxx"

# Rate limiting
UPSTASH_REDIS_REST_URL="https://xxxxxxxxxxxxxxxxxxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxxxxxxxxxxxxxxxxxxxx"